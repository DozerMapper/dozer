<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mappings PUBLIC "-//DOZER//DTD MAPPINGS//EN"
   "http://dozer.sourceforge.net/dtd/dozerbeanmapping.dtd">
<mappings>

  <configuration>
     <stop-on-errors>true</stop-on-errors>
     <wildcard>true</wildcard>
     <custom-converters>
      <!-- this mapping takes place on the TestCustomConverterObject and TestCustomConverterObjectPrime -->
      <converter type="net.sf.dozer.util.mapping.converters.InjectedCustomConverter" >
        <class-a>net.sf.dozer.util.mapping.vo.Vehicle</class-a>
        <class-b>net.sf.dozer.util.mapping.vo.Vehicle</class-b>
      </converter>
     </custom-converters>
  </configuration>
  
  <mapping>
    <class-a>net.sf.dozer.util.mapping.vo.Car</class-a>
    <class-b>net.sf.dozer.util.mapping.vo.Van</class-b>
  </mapping>
  

</mappings>