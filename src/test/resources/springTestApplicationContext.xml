<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
  "http://www.springframework.org/dtd/spring-beans.dtd">

<beans default-lazy-init="false">

  <bean id="net.sf.dozer.MapperIF" class="net.sf.dozer.DozerBeanMapper"
    singleton="true">
    <property name="mappingFiles">
      <list>
        <value>systempropertymapping1.xml</value>
        <value>dozerBeanMapping.xml</value>
      </list>
    </property>
    <property name="factories">
      <map>
        <!-- the key matches the name of the factory in the dozerBeanMapping.xml file -->
        <entry key="net.sf.dozer.factories.SampleCustomBeanFactory">
          <ref bean="sampleCustomBeanFactory" />
        </entry>
        <!-- more factories can be supplied with additional entry's -->
      </map>
    </property>
  </bean>

  <bean id="NoExplicitMappingsMapperIF" class="net.sf.dozer.DozerBeanMapper" singleton="true" />

  <bean id="cleanMapper" class="net.sf.dozer.DozerBeanMapper" singleton="true">
    <property name="mappingFiles">
      <list>
        <value>useCustomConverter.xml</value>
        <value>injectedCustomConverter.xml</value>
      </list>
    </property>
    <property name="customConverters">
      <list>
        <ref bean="customConverterTest" />
      </list>
    </property>
  </bean>

  <bean id="sampleCustomBeanFactory" class="net.sf.dozer.factories.SampleCustomBeanFactory"
    singleton="true" />

  <!-- custom converter -->
  <bean id="customConverterTest" class="net.sf.dozer.converters.InjectedCustomConverter"
    singleton="true">
    <property name="injectedName">
      <value>injectedName</value>
    </property>
  </bean>

</beans>